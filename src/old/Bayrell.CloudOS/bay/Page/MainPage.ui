<class version="1.0"
	name="Bayrell.CloudOS.Page.MainPage" extends="Runtime.Web.Component" 
	module="Bayrell.CloudOS" model="Bayrell.CloudOS.MainPageModel"
>

<use name="Runtime.Web.App.LayoutModel" />
<use name="Runtime.Web.App.RenderContainer" />
<use name="Runtime.Web.App.Route" />
<use name="Runtime.Web.App.RouteList" />
<use name="Runtime.Web.App.RouteMiddleware" />
<use name="Runtime.Web.Events.MouseClickEvent" />


<script>

/**
 * Route Action
 * @return RenderContainer
 */
@Route{ "uri": "/", "name": "app.dashboard.main" }
static async RenderContainer MainPage(RenderContainer container)
{
	/* Set title */
	container <= layout <= title <= "Index page";
	container <= layout <= layout_name <= "admin";
	
	/* Set page */
	container = container.setPage(classof MainPage, new Dict{});
	
	return [ container ];
}


/**
 * Route Action
 * @return RenderContainer
 */
@Route{ "uri": "/test/", "name": "app.dashboard.test" }
static async RenderContainer TestPage(RenderContainer container)
{
	/* Set title */
	container <= layout <= title <= "Index page";
	container <= layout <= layout_name <= "admin";
	
	/* Set page */
	container = container.setPage(classof MainPage, new Dict{});
	
	return [ container ];
}

</script>



<style>
</style>


<template name="render">
	<div>Cloud OS Version 0.3</div>
</template>


</class>