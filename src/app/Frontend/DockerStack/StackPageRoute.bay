namespace Bayrell.CloudOS.Frontend.DockerStack;

use Runtime.Web.BaseRoute;
use Runtime.Web.PageModel;
use Runtime.Web.RouteInfo;
use Runtime.Widget.Crud.CrudPage;
use Bayrell.CloudOS.Frontend.DockerStack.StackPageModel;
use Bayrell.CloudOS.Frontend.DockerStack.StackTableModel;


class StackPageRoute extends BaseRoute
{
	/**
	 * Returns routes
	 */
	pure Collection<RouteInfo> getRoutes() =>
	[
		new RouteInfo
		{
			"uri": "/docker/stack/",
			"name": "app:docker:stack:index",
			"method": "actionIndex",
		},
	];
	
	
	/**
	 * Returns page model name
	 */
	string getPageModelName() => classof StackPageModel;
	
	
	/**
	 * Index
	 */
	async void actionIndex()
	{
		StackPageModel page_model = this.layout.getPageModel();
		
		/* Set action */
		page_model.setAction("index");
		
		/* Create table widget */
		StackTableModel table = new StackTableModel{
			"parent_widget": page_model
		};
		
		/* Set page */
		table.storage.setPage(this.layout.request_query.get("page", 1));
		
		/* Load page model data */
		await page_model.loadData();
		
		/* Title */
		this.layout.setPageTitle("List of docker stacks");
		
		/* Render page */
		this.render( classof CrudPage );
	}
	
}