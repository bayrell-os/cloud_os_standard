class RoutePageRoute extends CrudRoute
{
	
	/**
	 * Returns routes
	 */
	pure Collection<RouteInfo> getRoutes() =>
	[
		new RouteInfo
		{
			"uri": "/routes/",
			"name": "app:routes:index",
			"method": "actionIndex",
		},
		new RouteInfo
		{
			"uri": "/routes/add/",
			"name": "app:routes:add",
			"method": "actionAdd",
		},
		new RouteInfo
		{
			"uri": "/routes/{id}/edit/",
			"name": "app:routes:edit",
			"method": "actionEdit",
		},
		new RouteInfo
		{
			"uri": "/routes/{id}/delete/",
			"name": "app:routes:delete",
			"method": "actionDelete",
		},
	];
	
	
	/**
	 * Returns page model
	 */
	string getPageModelName() => classof RoutePageModel;
	
}