namespace Bayrell.CloudOS.Frontend.Routes;

use Runtime.Web.BaseRoute;
use Runtime.Web.PageModel;
use Runtime.Web.RouteInfo;
use Runtime.Widget.Crud.CrudPage;
use Runtime.Widget.Table.TableModel;
use Bayrell.CloudOS.Frontend.Routes.RoutePageModel;
use Bayrell.CloudOS.Frontend.Routes.RouteTableModel;


class RoutePageRoute extends BaseRoute
{
	
	/**
	 * Returns routes
	 */
	pure Collection<RouteInfo> getRoutes() =>
	[
		new RouteInfo
		{
			"uri": "/routes/",
			"name": "app:routes:index",
			"method": "actionIndex",
		},
	];
	
	
	/**
	 * Returns page model name
	 */
	string getPageModelName() => classof RoutePageModel;
	
	
	/**
	 * Index
	 */
	async void actionIndex()
	{
		RoutePageModel page_model = this.layout.getPageModel();
		
		/* Set action */
		page_model.setAction("index");
		
		/* Create table widget */
		TableModel table = new RouteTableModel{
			"parent_widget": page_model,
		};
		
		/* Set page */
		table.storage.setPage(this.layout.request_query.get("page", 1));
		
		/* Load page model data */
		await page_model.loadData();
		
		/* Title */
		this.layout.setPageTitle("Routes");
		
		/* Render page */
		this.render( classof CrudPage );
	}
	
}