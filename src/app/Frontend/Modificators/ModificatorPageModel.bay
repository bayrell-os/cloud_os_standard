namespace Bayrell.CloudOS.Frontend.Modificators;

use Runtime.Web.PageModel;
use Runtime.Web.RenderContainer;
use Runtime.Widget.Crud.CrudPageModel;
use Bayrell.CloudOS.Frontend.Modificators.ModificatorTableModel;


class ModificatorPageModel extends CrudPageModel
{
	/**
	 * Init widget settings
	 */
	void initWidget(Dict params)
	{
		parent(params);
		
		if (this.layout.route.name == "app:modificators:index")
		{
			/* Set action */
			this.setAction("index");
			
			/* Create table widget */
			ModificatorTableModel table = this.addWidget(classof ModificatorTableModel);
			this.render_list.addItem(table);
		}
	}
	
	
	/**
	 * Build title
	 */
	void buildTitle(RenderContainer container)
	{
		/* Set title */
		if (this.action == "index")
		{
			this.layout.setPageTitle("Modificators");
		}
	}
}