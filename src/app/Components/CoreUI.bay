<class name="Runtime.Web.CoreUI" extends="Runtime.Web.BaseUI">


<template name="renderApp">
	
	%var string class_name = this.layout.getLayoutClassName();
	<div id="app" class="layout" class={{ "layout--" ~ this.layout.layout_name }}>
		<{class_name} @model=[] />
	</div>
	
	<script>
		window["app_data"] = @json{{ this.container.exportData() }};
	</script>
	
	<script>
		onReady(function(){
			let env = window["data_frontend_env"];
			Runtime.rtl.runApp(
				app_data["entry_point"],
				app_data["modules"],
				Runtime.Dict.from({
					"environments": app_data["environments"],
					"tz": @json{ @.tz }}
				)
			);
		});
