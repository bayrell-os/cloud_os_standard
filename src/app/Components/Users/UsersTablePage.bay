<class name="Bayrell.CloudOS.Components.Users.UsersTablePage"
    extends="Runtime.Web.Crud.TablePage">


<use name="Runtime.Web.Layout" />
<use name="Bayrell.CloudOS.Components.Users.UsersPageModel" />
<use name="Bayrell.CloudOS.Models.User" />
<use name="Runtime.Web.Crud.Button" component="true" />


<script>

pure Collection<string> getColumns(Layout layout, UsersPageModel model) =>
[
	"row_number",
	"login",
	"name",
	"banned",
	"row_buttons",
];


pure Dict<string> getLabels(Layout layout, UsersPageModel model) =>
{
	"login": "Login",
	"name": "Name",
	"banned": "Banned",
};

</script>


<template name="renderTop">
	<div class="web_table__top">
		<Button type="success middle" href={{ static::url("app:users:add") }}>[+] Add</Button>
	</div>
</template>


<template name="renderField" args="int row_number, string field_name, User item">
	
	%if (field_name == "row_buttons")
	{
		<Button type="small"
			href={{ static::url("app:users:edit", {"id": item.id }) }}
		>Edit</Button>
		<Button type="danger small"
			href={{ static::url("app:users:delete", {"id": item.id }) }}
		>Delete</Button>
	}
	%else
	{
		%render parent::renderField(row_number, field_name, item);
	}
	
</template>


<template name="renderButtons">
	<Button @event:MouseClickEvent="onSave">Save</Button>
</template>


</class>