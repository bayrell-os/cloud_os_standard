<class name="Bayrell.CloudOS.Components.Users.UsersListPage"
    extends="Runtime.Web.Crud.ListPage">


<use name="Runtime.Web.Layout" />
<use name="Bayrell.CloudOS.Components.Users.UsersPageModel" />
<use name="Bayrell.CloudOS.Models.User" />

<style>
</style>


<script>

pure Collection<string> getColumns(Layout layout, UsersPageModel model) =>
[
	"login",
	"name",
	"banned",
];


pure Dict<string> getLabels(Layout layout, UsersPageModel model) =>
{
	"title": "Login",
	"show_in_catalog": "Name",
	"show_on_top": "Banned",
};

</script>


<template name="renderField" args="int index, string field_name, User item">
	
	%if (field_name == "buttons")
	{
		<Button
			href={{ static::url("site:users:edit", {"id": item.id }) }}
		>Edit</Button>
		<Button type="danger"
			href={{ static::url("site:users:delete", {"id": item.id }) }}
		>Delete</Button>
	}
	
	%else
	{
		{{ item[field_name] }}
	}
	
</template>


<template name="renderButtons">
	<Button @event:MouseClickEvent="onSave">Save</Button>
</template>


</class>