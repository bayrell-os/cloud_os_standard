namespace Bayrell.CloudOS.Components.Workspace;

use Runtime.Web.RouteInfo;
use Runtime.Web.Crud.CrudRoute;
use Bayrell.CloudOS.Components.Workspace.WorkspaceDeletePage;
use Bayrell.CloudOS.Components.Workspace.WorkspacePageModel;
use Bayrell.CloudOS.Components.Workspace.WorkspaceSavePage;
use Bayrell.CloudOS.Components.Workspace.WorkspaceTablePage;


class WorkspacePageRoute extends CrudRoute
{
	
	/**
	 * Returns routes
	 */
	pure Collection<RouteInfo> getRoutes() =>
	[
		new RouteInfo
		{
			"uri": "/workspace/",
			"name": "app:workspace:index",
			"method": "actionIndex",
		},
		new RouteInfo
		{
			"uri": "/workspace/add/",
			"name": "app:workspace:add",
			"method": "actionAdd",
		},
		new RouteInfo
		{
			"uri": "/workspace/{id}/",
			"name": "app:workspace:edit",
			"method": "actionEdit",
		},
		new RouteInfo
		{
			"uri": "/workspace/{id}/delete/",
			"name": "app:workspace:delete",
			"method": "actionDelete",
		},
	];
	
	
	/**
	 * Returns id field name
	 */
	pure string getFieldNameId() => "id";
	
	
	/**
	 * Returns layout name
	 */
	string getLayoutName() => "default";
	
	
	/**
	 * Returns page model
	 */
	string getPageModelName() => classof WorkspacePageModel;
	
	
	/**
	 * Returns index page name
	 */
	string getIndexPageName() => classof WorkspaceTablePage;
	
	
	/**
	 * Returns save page name
	 */
	string getSavePageName() => classof WorkspaceSavePage;
	
	
	/**
	 * Returns delete page name
	 */
	string getDeletePageName() => classof WorkspaceDeletePage;
	
}