<class name="Bayrell.CloudOS.Components.Workspace.WorkspaceSavePage">

<use name="Runtime.ModelProxy" />
<use name="Runtime.Web.LayoutModel" />
<use name="Runtime.Web.Message" />
<use name="Runtime.Web.Events.MouseClickEvent" />
<use name="Runtime.Widget.Button" component="true" />
<use name="Runtime.Widget.Form.Form" component="true" />
<use name="Runtime.Widget.Form.FormModel" />
<use name="Runtime.Widget.Table.TableDialog" component="true" />
<use name="Runtime.Widget.Table.TableModel" />


<style>
.table_domains{
	padding-top: 1.5em;
}
.table_domains__label{
	font-size: 1.2em;
	font-weight: bold;
	margin-bottom: 1em;
}
</style>


<template name="renderTop">
	<div class="web_table__top">
		<Button type="default" href={{ model.back_page_url }}>Back</Button>
	</div>
</template>


<template name="render">
	
	%set FormModel form = model.getWidget("form");
	%set TableModel domains = model.getWidget("domains");
	
	%render static::renderTop();
	<Form @model=["widgets", "form"] />
	
	%if (domains != null)
	{
		<div class="table_domains">
			<div class="table_domains__label">Domains</div>
			<TableDialog @model=["widgets", "domains"] />
		</div>
	}
	
</template>


</class>