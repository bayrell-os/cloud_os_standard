namespace Bayrell.CloudOS;

use Runtime.Entity.Hook;
use Runtime.Web.Annotations.Api;
use Runtime.Web.Annotations.RemoteClass;
use Runtime.Web.Annotations.Route;


static class ModuleDescription
{
	/**
	 * Returns module name
	 * @return string
	 */
	pure string getModuleName() => "Bayrell.CloudOS";
	
	
	/**
	 * Returns module name
	 * @return string
	 */
	pure string getModuleVersion() => "0.5.0";
	
	
	/**
	 * Returns required modules
	 * @return Dict<string>
	 */
	pure Dict<string> requiredModules() =>
	{
		"Runtime": ">=0.3",
		"Runtime.Web": "*",
		"Runtime.Web.CRUD": "*",
	};
	
	
	/**
	 * Returns enities
	 */
	pure Collection<Dict> entities() =>
	[
		#ifdef BACKEND then
		/* new Api("Bayrell.CloudOS.Api.MainApi"), */
		#endif
		
		new Hook("Bayrell.Hooks.AppHook"),
		new Route("Bayrell.CloudOS.Components.MainRoutes"),
	];
	
}
